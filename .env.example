# ThreeFold Grid Hero Deployment Configuration
# Copy this file to .env and configure your settings

# Domain Configuration
DOMAIN_NAME=hero.projectmycelium.org

# SSL Configuration
ENABLE_SSL=true
SSL_EMAIL=admin@hero.projectmycelium.org
SSL_STAGING=false

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-here

# Hero App Configuration
HERO_BACKEND_PORT=8080
UI_COLAB_PORT=3000

# Network Configuration
MAIN_NETWORK=wireguard
NETWORK_MODE=both

# Deployment Options
HERO_AUTO_DEPLOY=false
HERO_AUTO_CLEAN=false